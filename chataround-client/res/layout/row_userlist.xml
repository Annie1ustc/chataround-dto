<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp" 
    android:orientation="vertical"
    android:weightSum="2"
    >
    <LinearLayout 
            android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:weightSum="2"
        >
	    <TextView
	        android:id="@+id/userNickNameLabelLeft"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:background="@drawable/rowshapeothers"
	        android:text="@string/nickname_label"
	        android:textStyle="bold"
	        />        
    <TextView
        android:id="@+id/userNicknameLeft"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/rowshapeothers"
        />        
    </LinearLayout>    
    
    <LinearLayout 
            android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:weightSum="4"
        >
	    <TextView
	        android:id="@+id/userMoodLabelLeft"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:background="@drawable/rowshapeothers"
	        android:text="@string/mood_label"
	        android:textStyle="bold"
	        />        
	    <TextView
	        android:id="@+id/userMoodLeft"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="2"
	        android:background="@drawable/rowshapeothers"
	        />
	    <TextView
	        android:id="@+id/userDistanceFromLeft"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:background="@drawable/rowshapeothers"
	        />	    
	     </LinearLayout>   
</LinearLayout>